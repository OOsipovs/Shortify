@model ConfirmEmailLoginVM

@{
    ViewData["Title"] = "Confirm your account";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Confirm your account</h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <form asp-controller="Auth"
                      asp-action="SendEmailConfirmation">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label for="emailAddress">Email address</label>
                        <input type="email" asp-for="Email" class="form-control" id="emailAddress" placeholder="Enter email" />
                        <small id="emailAddressSm" class="form-text text-muted">We'll never share your email with anyone else.</small><br />
                        <span asp-validation-for="Email" class="text-dander"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 btn-login">
                        Send Confirmation email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
