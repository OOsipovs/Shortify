@model LoginVM

@{
    ViewData["Title"] = "Log in to your account";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="form-header">Log in to your account</h4>

        <div class="row">
            <div class="col-md-8 offset-md-2">

                <form asp-controller="Auth"
                      asp-action="LoginSubmission">

                      <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label for="emailAddress">Email address</label>
                        <input type="email" asp-for="Email" class="form-control" id="emailAddress" placeholder="Enter email" />
                        <small id="emailAddressSm" class="form-text text-muted">We'll never share your email with anyone else.</small><br/>
                        <span asp-validation-for="Email" class="text-dander"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter password" /><br/>
                        <span asp-validation-for="Password" class="text-dander"></span>
                    </div>

                    <button type="submit" class="btn btn-outline-success mt-2 btn-login">
                        Log in
                    </button>
                </form>
            </div>
        </div>
        
        <div class="row pt-2">
            <div class="col-md-8 offset-md-2">
                <h5>External login</h5>
                @if(Model.Schemes.Count() == 0)
                {
                    <div>No external logn provider have configured</div>
                } 
                else
                {
                    <form>
                    <div>
                                    @foreach(var provider in Model.Schemes)
                                    {
                                        <button 
                                            type="submit" 
                                            class="btn btn-primary" 
                                            name="provider" 
                                            value="@provider.Name" 
                                            title="Loginusing your @provider.Name account" >
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                    </form>
                }
            </div>
        </div>
    </div>
    </div>

